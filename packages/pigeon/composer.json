{
    "name": "emitkowski/pigeon",
    "type": "library",
    "description": "A more flexible email message builder for Laravel 5 including chained methods, reusable message type configurations, and email layout and template view management.",
    "keywords": [
        "pigeon",
        "laravel 5",
        "laravel",
        "email",
        "message",
        "template",
        "views"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Eric Mitkowski",
            "email": "eric.mitkowski@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": ">=5.4"
    },
    "require-dev": {
        "phpunit/phpunit": "~4.0"
    },
    "autoload": {
        "psr-4": {
            "Pigeon\\": "src/Pigeon"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Pigeon\\PHPUnit\\": "tests/"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0.x-dev"
        }
    }
}
